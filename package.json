{
  "name": "dgt-for-chess-dot-com",
  "version": "1.0.0",
  "description": "An app to allow playing on Chess.com with a DGT board",
  "main": "public/electron.js",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "eject": "react-scripts eject",
    "ebuild": "npm run build && node_modules/.bin/build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "build": {
    "appId": "com.amitassaraf.dgtchess",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "homepage": "./",
  "repository": "https://github.com/amitassaraf/dgt-for-chess.com",
  "keywords": [
    "eboard",
    "smartboard",
    "chess.com",
    "chess",
    "dgt"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "author": "Amit Assaraf",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1"
  },
  "dependencies": {
    "@craco/craco": "^6.0.0",
    "babel-preset-electron": "^1.4.15",
    "chess.js": "^0.11.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "electron-is-dev": "^1.2.0",
    "evergreen-ui": "^5.1.2",
    "lodash": "^4.17.20",
    "puppeteer-core": "^5.5.0",
    "puppeteer-in-electron": "^3.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "say": "^0.16.0",
    "wait-on": "^5.2.1",
    "ws": "^7.4.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
